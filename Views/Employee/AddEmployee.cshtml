@model EmployeeManagement.ViewModels.AddEmployeeViewModel
@{
    ViewBag.Title = "AddEmployee";
}


<div class="row p-3">
    <div class="col-sm-12">
        <h1>Please enter Employee details</h1>
        <form novalidate="novalidate" action="/Employee/AddEmployee" method="post" class="needs-validation" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-sm-6">Name :
                    <input type="text" class="form-control" name="EmployeeName" required="required" pattern="^[a-zA-Z ]*$" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter name [alphabets only].
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">Email :
                    <input type="email" class="form-control" name="Email" required="required" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Invalid Email
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6"> Phone number:
                    <input type="text" class="form-control" name="PhoneNumber" required="required" pattern="^[789]\d{9}$" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Invalid mobile Number.
                    </div>
                    </div>
                </div>
                
                @{Html.RenderPartial("UploadImageView");
                }


                    <button type="submit" class="btn btn-primary">Add Employee</button>
        </form>
    </div>
</div>


           
        
        <script>
            $(document).on("submit", ".needs-validation", validate);
            $(".needs-validation input").blur(validate);
            function validate(event) {
                if ($(".needs-validation")[0].checkValidity() == false ) {
                    event.preventDefault();
                }
                $(".needs-validation")[0].classList.add("was-validated");
            }
        </script>

