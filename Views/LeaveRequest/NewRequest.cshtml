@model EmployeeManagement.ViewModels.LeaveViewModel
@{
    ViewBag.Title = "New Request";
}
<div class="row">
    <div class="col-sm-12">
        <h1>Registration</h1>
        <form novalidate="novalidate" action="/LeaveRequest/NewRequest" method="post" class="needs-validation" style="padding:20px">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="StartDate">Start Date</label>
                    <input class="form-control" type="date" value="" name="StartDate">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter name [alphabets only].
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="StartDate">Start Date</label>
                    <input class="form-control" type="date" value="" name="EndDate">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter name [alphabets only].
                    </div>
                </div>
            </div>
            <input type="hidden" name="EmployeeID" value=@Convert.ToInt32(Session["CurrentUserID"])>
            <input type="hidden" name="IsApproved" value="Pending">
            
            <button type="submit" class="btn btn-primary">Apply for leave</button>
        </form>
    </div>
</div>





<script>
    $("a[href='/LeaveRequest/']").attr("id", "active");
    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
    function escapeRegExp(str) {
        return str.replace(/[\-\[\]\/\{\}\(\)\*\+\?\.\\\^\$]\|]/g, "\\$&");
    }

</script>
