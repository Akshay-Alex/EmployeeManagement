@model EmployeeManagement.ViewModels.UserViewModel
@{
    ViewBag.Title = "UpdateEmployee";
}


<div class="row p-3">
    <div class="col-sm-12">
        <h1>Please enter Employee details</h1>
        <form novalidate="novalidate" action="/Account/UpdateEmployee" method="post" class="needs-validation" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-sm-6">
                    Photo :
                    <img src="data:image;base64,@Model.ImageUrl" width="100px" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    Name :
                    <input type="text" class="form-control" name="Name" value="@Model.Name" required="required" pattern="^[a-zA-Z ]*$" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter name [alphabets only].
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    Email :
                    <input type="email" class="form-control" name="Email" value="@Model.Email" required="required" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Invalid Email
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    Phone number :
                    <input type="text" class="form-control" name="Mobile" value="@Model.Mobile" required="required" pattern="^[789]\d{9}$" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Invalid mobile Number.
                    </div>
                </div>
                @Html.HiddenFor(Model => Model.UserID)
            </div>
            <button type="submit" class="btn btn-primary" name="submit" value="Update">Update Employee</button>
            <button type="submit" class="btn btn-danger" name="submit" value="Delete">Delete Employee</button>
        </form>
    </div>
</div>




<script>
            $(document).on("submit", ".needs-validation", validate);
            $(".needs-validation input").blur(validate);
            function validate(event) {
                if ($(".needs-validation")[0].checkValidity() == false ) {
                    event.preventDefault();
                }
                $(".needs-validation")[0].classList.add("was-validated");
            }
</script>

